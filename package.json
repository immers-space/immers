{
  "name": "immers",
  "version": "2.0.0",
  "description": "ActivityPub server for the metaverse",
  "main": "index.js",
  "engines": {
    "node": ">=14.15"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "standard",
    "dev:server": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 node index.js",
    "dev:client": "npx parcel watch views/**/*.html --public-url /dist/",
    "build:client": "rimraf dist/ && npx parcel build views/**/*.html --public-url /dist/",
    "start": "cross-env NODE_ENV=production node index.js",
    "build:image": "docker build -t immersspace/immers .",
    "publish:image": "docker tag immersspace/immers:latest immersspace/immers:v$npm_package_version && docker push immersspace/immers:latest && docker push immersspace/immers:v$npm_package_version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wmurphyrd/immers.git"
  },
  "keywords": [
    "ActivityPub",
    "activitypub-express",
    "decentralized",
    "virtual",
    "reality",
    "WebXR"
  ],
  "author": "Will Murphy",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/wmurphyrd/immers/issues"
  },
  "homepage": "https://github.com/wmurphyrd/immers#readme",
  "dependencies": {
    "@reach/router": "^1.3.4",
    "@small-tech/auto-encrypt": "^3.0.1",
    "activitypub-express": "^3.1.0",
    "aesthetic-css": "^1.0.1",
    "autoprefixer": "^9.8.8",
    "bcrypt": "^5.0.1",
    "classnames": "^2.3.1",
    "connect-ensure-login": "^0.1.1",
    "connect-history-api-fallback": "^1.6.0",
    "connect-mongodb-session": "^3.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "easy-no-password": "^1.2.2",
    "email-validator": "^2.0.4",
    "emoji-mart": "^3.0.1",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "grapheme-splitter": "^1.0.4",
    "migrate-mongo": "^8.2.3",
    "mongodb": "^4.3.1",
    "morgan": "^1.10.0",
    "node-graceful-shutdown": "1.1.0",
    "nodemailer": "^6.7.2",
    "nunjucks": "^3.2.3",
    "oauth2orize": "^1.11.1",
    "overlaps": "^1.0.0",
    "parcel-bundler": "^1.12.5",
    "parse-domain": "^5.0.0",
    "passport": "^0.5.2",
    "passport-anonymous": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "postcss-modules": "^3.2.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.24.6",
    "react-sanitized-html": "^2.0.0",
    "rimraf": "^3.0.2",
    "sanitize-html": "^1.27.5",
    "sass": "^1.49.7",
    "socket.io": "^4.4.1",
    "uid-safe": "^2.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.17.4",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "chokidar": "^3.5.3",
    "standard": "^16.0.4"
  }
}
